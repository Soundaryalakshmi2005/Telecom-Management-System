package com.example.demo.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController     //The frontend class is coming here while the any actions made in frontend
public class DemoController {   //In servlet we can able to create only one method but here we can able to create mutiple methods
	
	@GetMapping("/hii")  //mapping present in postman
	String getData() {
		return "Good morning mapla";
	}

}
